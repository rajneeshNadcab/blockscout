
<div class="fade-up-blocks-chain--" data-selector="chain-block" data-block-number="<%= @block.number %>">
  <div class="">
    <table class="table fixed-layout mb-0">
      <tbody class="table-group-divider">
      <tr>
        <td class="sno_col">
          <span class="btn-icon">
            <span class="btn-icon-inner">
            Bk
            </span>
          </span>
        </td>
        <td>
          <%= link(
            @block,
            class: "text-blue",
            to: block_path(BlockScoutWeb.Endpoint, :show, @block),
            "data-selector": "block-number"
          ) %>
            <div class="text-nowrap text-green fs-12" data-from-now="<%= @block.timestamp %>"> </div>
        </div>
        </td>
        <td>
          <%= if System.get_env("HIDE_BLOCK_MINER") !== "true" do %>
            <div class="d-flex" style="width:340px">
              <div class="mr-2 text-dark hide_fee_reci" style="width:90px"><%= gettext "Fee Recipient" %> </div>
              <div class="text-truncate" style="width:160px">
                <%= render BlockScoutWeb.AddressView,
                  "_link.html",
                  address: @block.miner,
                  contract: false,
                  use_custom_tooltip: false,
                  custom_classes_tooltip: ["miner-address-tooltip"] %>
              </div>
            </div>
          <% end %>
          <%= if BlockScoutWeb.BlockView.show_reward?(@block.rewards) do %>
            <div class="text-truncate width135 text-blue">
              <%= gettext "Reward" %> <%= BlockScoutWeb.BlockView.combined_rewards_value(@block) %>
            </div>
          <% end %>

          <div class="tile-transactions text-blue">
            <span class="mr-2"><%= gettext("%{count} Transactions", count: Enum.count(@block.transactions)) %></span>
          </div>
        </td>
        <td class="text-right">
          <span class="p-1 border rounded-sm">
            <span class="fs-12">
            <%= gettext "0.00000" %>  <%= Explorer.coin_name() %>
            </span>
          </span>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
